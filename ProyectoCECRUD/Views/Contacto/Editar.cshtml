@model ProyectoCECRUD.Models.Contacto

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-3">
    <div class="col-sm-12">
        <div class="card border-primary">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Editar contacto</h4>
            </div>
            <div class="card-body">
                <form action="@Url.Action("Editar","Contacto")" method="post">
                    <div class="form-group text-secondary" >
                        <label>ID Contacto</label>
                        @Html.HiddenFor(m => m.IdContacto)
                        @Html.TextBoxFor(m => m.IdContacto, new { @class = "form-control  text-secondary", @readonly = "readonly" })
                    </div>
                        <div class="form-group">
                            <label>Nombres</label>
                            <input type="text" class="form-control" name="Nombres" value="@Html.DisplayTextFor(m => m.Nombres)">
                        </div>
                        <div class="form-group">
                            <label>Apellidos</label>
                            <input type="text" class="form-control" name="Apellidos" value="@Html.DisplayTextFor(m => m.Apellidos)">
                        </div>
                        <div class="form-group">
                            <label>Telefono</label>
                            <input type="text" class="form-control" name="Telefono" value="@Html.DisplayTextFor(m => m.Telefono)">
                        </div>
                        <div class="form-group">
                            <label>Correo</label>
                            <input type="text" class="form-control" name="Correo" value="@Html.DisplayTextFor(m => m.Correo)">
                        </div>
                        <br />
                        <button type="submit" class="btn btn-primary">Guardar</button>
                        <a class="btn btn-warning" href="@Url.Action("Inicio", "Contacto")">Volver</a>
                </form>
            </div>
        </div>
    </div>
</div>


